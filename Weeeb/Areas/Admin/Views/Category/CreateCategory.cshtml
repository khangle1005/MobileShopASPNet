@model Categories
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layouta.cshtml";
}
<!-- End Navbar -->
<div class="content">
    <div class="container-fluid">
        <!-- your content here -->
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title">Add Categories</h4>
                    <p class="card-category">Complete User profile</p>
                </div>
                <div class="card-body">
                    <form action="" method="post" name="form" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group bmd-form-group">
                                    <label asp-for="cat_id" class="bmd-label-floating">Product Category</label>
                                    <input asp-for="cat_id" type="text" id="cat_id" name="cat_id" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group bmd-form-group">
                                    <label asp-for="cat_title" class="bmd-label-floating">Product Brand</label>
                                    <input asp-for="cat_title" type="text" name="cat_title" id="cat_title" class="form-control" required>
                                </div>
                            </div>
                        </div>
                        <button type="submit" value="CreateCategory" name="btn_save" id="btn_save" class="btn btn-primary pull-right">Update Brand</button>
                        <div class="clearfix"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
